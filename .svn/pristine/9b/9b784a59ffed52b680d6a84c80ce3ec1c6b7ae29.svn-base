<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.inogard.enio.api.mappers.quot.QuotMapper">
	
	<select id="findByQuot" parameterType="quot" resultType="quot">
	<![CDATA[
		SELECT
			rfq_no, 
			quot_rev, 
			cus_cd,
			amt, 
			vat_amt, 
			tax_typecd, 
			crcy_cd, 
			CONVERT(NUMERIC(12,2),crcy_rate), 
			quot_sbmt_dt
		FROM tb_quot a with (nolock)
		WHERE rfq_no = #{rfqNo}
			and quot_rev = #{quotRev}
			and cus_cd = #{cusCd}
	]]>
	</select>
	
	<select id="findAllByRfqNo" parameterType="String" resultType="quot">
	<![CDATA[
		SELECT
			rfq_no, 
			quot_rev, 
			cus_cd,
			amt, 
			vat_amt, 
			tax_typecd, 
			crcy_cd, 
			CONVERT(NUMERIC(12,2),crcy_rate) as crcy_rate,
			quot_sbmt_dt
		FROM tb_quot
		WHERE rfq_no = #{rfqNo}
	]]>
	</select>

</mapper>