<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
	<include resource="org/springframework/boot/logging/logback/defaults.xml" />
	<timestamp key="byMonth" datePattern="yyyyMM" />
	<property name="APP_LOG_PATH" value="${LOG_PATH}/${byMonth}" />

	<include resource="org/springframework/boot/logging/logback/console-appender.xml" />
	<appender name="ENIO-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>
			<pattern>${FILE_LOG_PATTERN}</pattern>
		</encoder>
		<file>${APP_LOG_PATH}/enio-api.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${APP_LOG_PATH}/enio-api.log-%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>180</maxHistory>
		</rollingPolicy>
	</appender>
	
	<appender name="ENIO-SQL-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>
			<pattern>${FILE_LOG_PATTERN}</pattern>
		</encoder>
		<file>${APP_LOG_PATH}/enio-api-sql.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${APP_LOG_PATH}/enio-api-sql-%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>180</maxHistory>
		</rollingPolicy>
	</appender>

	<springProfile name="default, dev">
    <logger name="kr.co.inogard.enio.api" level="DEBUG" additivity="false">
      <appender-ref ref="CONSOLE" />
      <appender-ref ref="ENIO-FILE" />
    </logger>
    
    <logger name="jdbc" level="OFF" />
    <logger name="jdbc.sqlonly" level="OFF" />
    <logger name="jdbc.audit" level="OFF" />
    <logger name="jdbc.resultset" level="OFF" />
    <logger name="jdbc.connection" level="OFF" />
    
    <logger name="jdbc.sqltiming" level="DEBUG" additivity="false">
      <appender-ref ref="CONSOLE" />
      <appender-ref ref="ENIO-SQL-FILE" />
    </logger>
    
    <logger name="jdbc.resultsettable" level="DEBUG" additivity="false">
      <appender-ref ref="CONSOLE" />
      <appender-ref ref="ENIO-SQL-FILE" />
    </logger>
    
    <logger name="org.springframework.jdbc.datasource.DataSourceTransactionManager" level="DEBUG" additivity="false">
      <appender-ref ref="CONSOLE" />
      <appender-ref ref="ENIO-SQL-FILE" />
    </logger>
    
    <root level="INFO">
      <appender-ref ref="CONSOLE" />
      <appender-ref ref="ENIO-FILE" />
    </root>
  </springProfile>

  <springProfile name="prod">
    <logger name="kr.co.inogard.enio.api" level="INFO" additivity="false">
      <appender-ref ref="CONSOLE" />
      <appender-ref ref="ENIO-FILE" />
    </logger>
    
    <logger name="jdbc" level="OFF" />
    <logger name="jdbc.sqlonly" level="OFF" />
    <logger name="jdbc.audit" level="OFF" />
    <logger name="jdbc.resultset" level="OFF" />
    <logger name="jdbc.connection" level="OFF" />
    
    <logger name="jdbc.sqltiming" level="DEBUG" additivity="false">
      <appender-ref ref="CONSOLE" />
      <appender-ref ref="ENIO-SQL-FILE" />
    </logger>
    
    <logger name="jdbc.resultsettable" level="DEBUG" additivity="false">
      <appender-ref ref="CONSOLE" />
      <appender-ref ref="ENIO-SQL-FILE" />
    </logger>
    
    <logger name="org.springframework.jdbc.datasource.DataSourceTransactionManager" level="DEBUG" additivity="false">
      <appender-ref ref="CONSOLE" />
      <appender-ref ref="ENIO-SQL-FILE" />
    </logger>
    
    <root level="INFO">
      <appender-ref ref="CONSOLE" />
      <appender-ref ref="ENIO-FILE" />
    </root>
  </springProfile>
</configuration>