<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.inogard.enio.api.mappers.po.PoItemMapper">
	<select id="findPoItemByPoNo" resultType="PoItem">
		<![CDATA[
		SELECT a.po_no
			,a.po_seq as item_seq
			,a.pr_no
			,a.pr_seq as pr_item_seq
			,a.item_nm
			,a.item_cd
			,a.cls_cd
			,a.size_nm
			,a.model_nm
			,a.mk_comp_nm
			,a.dlv_loc
			,a.dlv_req_dt as dlv_req_ymd
			,a.unit_cd
			,a.qty
			,a.unit_prc
			,a.amt
		FROM tb_poitem a with(nolock)
		WHERE a.po_no = #{poNo}
		]]>
	</select>
</mapper>